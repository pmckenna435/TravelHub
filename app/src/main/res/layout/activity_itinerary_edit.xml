<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItineraryEdit"
    android:background="@drawable/grad_background">


    <RelativeLayout
    android:layout_width="350dp"
    android:layout_height="match_parent"
        android:layout_centerInParent="true"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="test"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:id="@+id/testpos"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of the day"
            android:textSize="25dp"
            android:layout_below="@+id/testpos"
            android:layout_centerHorizontal="true"
            android:id="@+id/txtDateOfSelectedDay"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test text that will display the activities for a specific day - which the user can edit"

            android:layout_marginTop="20dp"
            android:layout_below="@id/txtDateOfSelectedDay"

            android:textSize="20dp"
            android:id="@+id/txtChangedText"

            />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_below="@+id/txtChangedText"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:id="@+id/btnSaveChanges"
            android:background="@drawable/button_rec_round_green"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:layout_below="@+id/txtChangedText"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:id="@+id/btnCancel"
            android:background="@drawable/button_rec_round"
            />





</RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/navBar"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"

        app:menu="@menu/menu_nav"
        />





</RelativeLayout>